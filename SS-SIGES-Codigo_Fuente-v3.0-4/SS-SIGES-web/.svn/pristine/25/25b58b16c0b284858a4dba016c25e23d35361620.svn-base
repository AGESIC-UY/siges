<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component"
                xmlns:fn="http://java.sun.com/jsp/jstl/functions">

    <ice:panelGroup rendered="#{reporteProyectoMB.listaAcumulados != null}">
        <ice:panelGroup styleClass="anioProducto">
            <ice:commandLink action="#{reporteProyectoMB.retrocederAnio()}" 
                             rendered="#{reporteProyectoMB.contieneAnioMenor()}">
                <ice:graphicImage value="../img/atrasar-fase.png" />
            </ice:commandLink>
            <ice:outputText value="#{reporteProyectoMB.anio}" title="#{labels.reporte_proy_anio_desplegado}"/>
            <ice:commandLink action="#{reporteProyectoMB.avanzarAnio()}"
                             rendered="#{reporteProyectoMB.contieneAnioMayor()}">
                <ice:graphicImage value="../img/adelantar-fase.png" />
            </ice:commandLink>
        </ice:panelGroup>

        <c:set var="tipoPre" value="#{reporteProyectoMB.tipoPre}" />
        <ice:commandLink action="#{reporteProyectoMB.recargarAcumulados()}">
            <ice:outputText value="#{tipoPre == 1 ? labels.reporte_proy_pre_por_mon : labels.reporte_proy_pre_por_adq}" />
        </ice:commandLink>

        <ice:panelGroup >
            <ace:dataTable id="tblAcumulados" 
                           value="#{reporteProyectoMB.listaAcumulados}" 
                           var="acu" 
                           styleClass="table-responsive tablaAcumulados">

                <ace:row condition="group" groupBy="#{acu.titulo}" pos="before" styleClass="tituloAcumulado">
                    <ace:column colspan="14">
                        <h:outputText value="#{acu.titulo}"/>

                        <c:set var="detallePre" value="#{acu.titulo == 'Presupuesto'}" />
                        <h:outputText value=" - #{labels.presupuesto_base_abrev}:" rendered="#{detallePre}"/>
                        <h:outputText value=" #{reporteProyectoMB.presupuesto.preMoneda.monSigno} " rendered="#{detallePre}"/>
                        <h:outputText value="#{reporteProyectoMB.presupuesto.preBase}"
                                      rendered="#{detallePre}"
                                      converter="ImporteFormatConverter"/>
                        <c:if test="#{not empty reporteProyectoMB.presupuesto.fuenteFinanciamiento.fueNombre}" >
                            <h:outputText value=" (#{reporteProyectoMB.presupuesto.fuenteFinanciamiento.fueNombre})"
                                          rendered="#{detallePre}"/>
                        </c:if>
                    </ace:column>
                </ace:row>

                <ace:column headerText="#{labels.reporte_proy_prod_nombre}" >
                    <h:outputText value="#{acu.nombre}"/>
                </ace:column>

                <ace:column headerText="" >
                    <div class="prodItem">
                        <h:outputText value="#{acu.descPlan}"/>
                        <h:outputText value="#{acu.descReal}"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_1}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 1).valorPlan}"
                                      converter="ImporteFormatConverter"/>

                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 1).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 1)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_2}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 2).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 2).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 2)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_3}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 3).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 3).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 3)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_4}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 4).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 4).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 4)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_5}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 5).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 5).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 5)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_6}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 6).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 6).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 6)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_7}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 7).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 7).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 7)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_8}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 8).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 8).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 8)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_9}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 9).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 9).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 9)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_10}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 10).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 10).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 10)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_11}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 11).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 11).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 11)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

                <ace:column headerText="#{labels.date_mes_abreviado_12}" >
                    <div class="prodItem">
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 12).valorPlan}"
                                      converter="ImporteFormatConverter"/>
                        <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 12).valorReal}"
                                      style="border-bottom: 6px solid #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 12)}"
                                      converter="ImporteFormatConverter"/>
                    </div>
                </ace:column>

            </ace:dataTable>
        </ice:panelGroup>

        <ice:panelGroup id="infoReferenciaSemaforos" >
            <ice:outputText value="#{reporteProyectoMB.semaforosUtilizados()}" escape="false" />
        </ice:panelGroup>
    </ice:panelGroup>
</ui:composition>