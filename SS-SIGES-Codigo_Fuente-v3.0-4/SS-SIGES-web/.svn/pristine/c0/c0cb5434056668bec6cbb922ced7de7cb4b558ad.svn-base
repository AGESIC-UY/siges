<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:form id="frmPopup">
        <ice:panelPopup rendered="#{notificacionMB.renderPopupEdicion.isRenderPopup()}" 
                        draggable="true" 
                        autoCentre="true" 
                        modal="true"
                        style="width: 900px;">
            <f:facet name="header">
                <ice:panelGroup styleClass="cabezalPopup">
                    <ice:outputText value="#{labels.titulo_notif}"/>
                    <ice:commandButton styleClass="botonCerrar" 
                                       action="#{notificacionMB.cancelar()}"/>
                </ice:panelGroup>
            </f:facet>

            <f:facet name="body">
                <ice:panelGroup id="formNotif">
                    <ice:panelGrid styleClass="formulario" columns="4">
                        <ice:outputLabel value="#{labels.notif_head_codigo}:" styleClass="obligatorio"/>
                        <ace:textEntry value="#{notificacionMB.notifEnEdicion.notCod}" disabled="true"/>

                        <ice:outputLabel value="#{labels.notif_head_desc}:" styleClass="obligatorio"/>
                        <ace:textAreaEntry value="#{notificacionMB.notifEnEdicion.notDesc}" />
                    </ice:panelGrid>

                    <ice:panelGrid styleClass="formulario form-checks" columns="8">
                        <ice:panelGroup>
                            <ice:outputLabel value="#{labels.ficha_notif_head_pm}:" />
                            <ace:checkboxButton value="#{notificacionMB.notifEnEdicion.notGerenteAdjunto}" />
                        </ice:panelGroup>
                        <ice:panelGroup>
                            <ice:outputLabel value="#{labels.ficha_notif_head_pmof}:" />
                            <ace:checkboxButton value="#{notificacionMB.notifEnEdicion.notPmof}" />
                        </ice:panelGroup>
                        <ice:panelGroup>
                            <ice:outputLabel value="#{labels.ficha_notif_head_pmot}:" />
                            <ace:checkboxButton value="#{notificacionMB.notifEnEdicion.notPmot}" />
                        </ice:panelGroup>
                        <ice:panelGroup>
                            <ice:outputLabel value="#{labels.ficha_notif_head_sponsor}:" />
                            <ace:checkboxButton value="#{notificacionMB.notifEnEdicion.notSponsor}" />
                        </ice:panelGroup>
                    </ice:panelGrid>

                    <ice:panelGrid styleClass="formulario" >
                        <ice:outputLabel value="#{labels.notif_head_mensaje}:" />
                        <ace:richTextEntry id="notifMensaje"
                                           value="#{notificacionMB.notifEnEdicion.notMsg}" 
                                           toolbar="Basic" immediate="true" language="es"
                                           skin="kama" saveOnSubmit="true"
                                           styleClass="ancho100" height="80px" />
                    </ice:panelGrid>

                    <ice:panelGroup styleClass="panelBotones">
                        <ace:messages id="popupMsg"/>
                        <ace:pushButton value="#{labels.guardar}" 
                                        action="#{notificacionMB.guardar}" 
                                        styleClass="boton principal guardar"/>
                        <ace:linkButton value="#{labels.cancelar}" 
                                        action="#{notificacionMB.cancelar()}"
                                        styleClass="boton secundario" />
                    </ice:panelGroup>
                </ice:panelGroup>
            </f:facet>
        </ice:panelPopup>
    </ice:form>
</ui:composition>
