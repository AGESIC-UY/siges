<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:form id="frmPopup">
        <ice:panelPopup rendered="#{organiIntProveMB.renderPopupEdicion.isRenderPopup()}" 
                        draggable="true" 
                        autoCentre="true" 
                        modal="true"
                        style="width: 900px;">
            <f:facet name="header">
                <ice:panelGroup styleClass="cabezalPopup">
                    <ice:outputText value="#{labels.orga_titulo}"/>
                    <ice:commandButton styleClass="botonCerrar" 
                                       action="#{organiIntProveMB.cancelar()}"/>
                </ice:panelGroup>
            </f:facet>

            <f:facet name="body">
                <ice:panelGroup id="formOrga">
                    <ice:panelGrid styleClass="formulario" columns="4">
                        <ice:outputLabel value="#{labels.orga_head_nombre}:" styleClass="obligatorio"/>
                        <ace:textEntry value="#{organiIntProveMB.orgaEnEdicion.orgaNombre}" />

                        <ice:outputLabel value="#{labels.orga_head_proveedor}"/>
                        <ace:checkboxButton value="#{organiIntProveMB.orgaEnEdicion.orgaProveedor}"/>

                        <ice:outputLabel value="#{labels.orga_head_razon_social}" />
                        <ace:textEntry value="#{organiIntProveMB.orgaEnEdicion.orgaRazonSocial}"/>

                        <ice:outputLabel value="#{labels.orga_head_rut}" />
                        <ace:textEntry value="#{organiIntProveMB.orgaEnEdicion.orgaRut}"/>

                        <ice:outputLabel value="#{labels.orga_head_mail}" />
                        <ace:textEntry value="#{organiIntProveMB.orgaEnEdicion.orgaMail}"/>

                        <ice:outputLabel value="#{labels.orga_head_telefono}" />
                        <ace:textEntry value="#{organiIntProveMB.orgaEnEdicion.orgaTelefono}"/>

                        <ice:outputLabel value="#{labels.orga_head_web}" />
                        <ace:textEntry value="#{organiIntProveMB.orgaEnEdicion.orgaWeb}"/>

                        <ice:outputLabel value="#{labels.orga_head_direccion}" />
                        <ace:textEntry value="#{organiIntProveMB.orgaEnEdicion.orgaDireccion}"/>

                        <ice:outputLabel value="#{labels.orga_head_ambito}:"/>
                        <ice:selectOneMenu value="#{organiIntProveMB.listaIntAmbitoCombo.selected}"
                                           styleClass="textoMedio">
                            <f:selectItems value="#{organiIntProveMB.listaIntAmbitoCombo.items}"/>
                        </ice:selectOneMenu>
                    </ice:panelGrid>

                    <ice:panelGroup styleClass="panelBotones">
                        <ace:messages id="popupMsg"/>
                        <ace:pushButton value="#{labels.guardar}" 
                                        action="#{organiIntProveMB.guardar}" 
                                        styleClass="boton principal guardar"/>
                        <ace:linkButton value="#{labels.cancelar}" 
                                        action="#{organiIntProveMB.cancelar()}"
                                        styleClass="boton secundario" />
                    </ice:panelGroup>
                </ice:panelGroup>
            </f:facet>
        </ice:panelPopup>
    </ice:form>
</ui:composition>
