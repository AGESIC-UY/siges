<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component"
                xmlns:fn="http://java.sun.com/jsp/jstl/functions">

    <ice:form id="ReportePresupuesto">
        <ice:panelGroup id="tituloPagina" styleClass="tituloPagina">
            <ice:outputLabel value="#{labels.rep_pre_titulo}"/>
        </ice:panelGroup>

        <ice:panelGroup id="reportePreFiltro">
            <ice:panelGrid  styleClass="formulario" columns="4">
                <ice:outputLabel value="#{labels.rep_pre_filtro_proyprog}"/>
                <ace:textEntry value="#{reportePresupuestoMB.filtro.nombre}"/>

                <ice:outputLabel value="#{labels.rep_pre_filtro_area}"/>
                <ice:selectOneMenu value="#{reportePresupuestoMB.areaCombo.selected}">
                    <f:selectItems value="#{reportePresupuestoMB.areaCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.rep_pre_filtro_gerente}"/>
                <ice:selectOneMenu value="#{reportePresupuestoMB.gerenteAdjuntoCombo.selected}">
                    <f:selectItems value="#{reportePresupuestoMB.gerenteAdjuntoCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.rep_pre_filtro_sponsor}"/>
                <ice:selectOneMenu value="#{reportePresupuestoMB.sponsorCombo.selected}">
                    <f:selectItems value="#{reportePresupuestoMB.sponsorCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.rep_pre_filtro_pmof}"/>
                <ice:selectOneMenu value="#{reportePresupuestoMB.pmofCombo.selected}">
                    <f:selectItems value="#{reportePresupuestoMB.pmofCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.rep_pre_filtro_anio}"/>
                <ice:selectOneMenu value="#{reportePresupuestoMB.anioCombo.selected}">
                    <f:selectItems value="#{reportePresupuestoMB.anioCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.rep_pre_filtro_fase}:"/>
                <ice:selectManyCheckbox value="#{reportePresupuestoMB.filtro.estados}">
                    <f:selectItems value="#{reportePresupuestoMB.listaEstados}"/>
                </ice:selectManyCheckbox>

                <ice:outputLabel value="#{labels.rep_pre_filtro_area_tem}:"/>
                <ace:pushButton styleClass="botonEditar iconoTabla #{reportePresupuestoMB.areasTematicasHasValues() ? 'valores' : ''}" 
                                action="#{reportePresupuestoMB.areaTematicaPopup(true)}"/>

                <ice:outputLabel value="#{labels.rep_pre_filtro_proveedor}"/>
                <ice:selectOneMenu value="#{reportePresupuestoMB.proveedorCombo.selected}">
                    <f:selectItems value="#{reportePresupuestoMB.proveedorCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.rep_pre_filtro_fuente}"/>
                <ice:selectOneMenu value="#{reportePresupuestoMB.fuenteFinancCombo.selected}">
                    <f:selectItems value="#{reportePresupuestoMB.fuenteFinancCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.rep_pre_filtro_moneda}"/>
                <ice:selectOneMenu value="#{reportePresupuestoMB.monedaCombo.selected}">
                    <f:selectItems value="#{reportePresupuestoMB.monedaCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.rep_pre_filtro_procedimiento}"/>
                <ace:textEntry value="#{reportePresupuestoMB.filtro.procedimiento}"/>

                <ice:outputLabel value="#{labels.rep_pre_filtro_procedimiento_grp}"/>
                <ace:textEntry value="#{reportePresupuestoMB.filtro.procedimientoGRP}"/>

                <ice:outputLabel value="#{labels.rep_pre_filtro_concepto}:"/>
                <ice:selectManyCheckbox value="#{reportePresupuestoMB.filtro.concepto}">
                    <f:selectItems value="#{reportePresupuestoMB.listaConceptos}"/>
                </ice:selectManyCheckbox>
            </ice:panelGrid>
        </ice:panelGroup>

        <ice:panelGroup styleClass="lineaDivision col-sm-12">

            <!-- Radio button por Adq o Moneda -->
            <ice:selectOneRadio value="#{reportePresupuestoMB.filtro.tipoReporte}" 
                                styleClass="radioButton">
                <f:selectItems value="#{reportePresupuestoMB.listaTipoReporte}" />
            </ice:selectOneRadio >
        </ice:panelGroup>

        <ice:panelGroup styleClass="panelBotones">
            <ace:messages id="reportePreMsg"/>
            <ace:pushButton value="#{labels.rep_pre_generar}" 
                            styleClass="boton principal" 
                            action="#{reportePresupuestoMB.generarPlanillaAction()}"/>
            <ace:linkButton  value="#{labels.limpiar}" styleClass="boton secundario" 
                             action="#{reportePresupuestoMB.limpiarFiltroAction()}"/>
        </ice:panelGroup>

    </ice:form>

</ui:composition>