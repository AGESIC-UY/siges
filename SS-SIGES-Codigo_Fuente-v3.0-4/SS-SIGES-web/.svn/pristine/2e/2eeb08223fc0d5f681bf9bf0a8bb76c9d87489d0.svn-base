package com.sofis.web.delegates;

import com.sofis.business.ejbs.MailTemplateBean;
import com.sofis.entities.data.MailsTemplate;
import java.util.List;
import javax.inject.Inject;

/**
 *
 * @author Usuario
 */
public class MailTemplateDelegate {

    @Inject
    MailTemplateBean mailTemplateBean;

    public MailsTemplate guardar(MailsTemplate mt) {
        return mailTemplateBean.guardar(mt);
    }

    public List<MailsTemplate> obtenerTodosPorOrg(Integer orgPk) {
        return mailTemplateBean.obtenerTodosPorOrg(orgPk);
    }

    public void controlarMailTmpFaltantes() {
        mailTemplateBean.controlarMailTmpFaltantes();
    }
}
