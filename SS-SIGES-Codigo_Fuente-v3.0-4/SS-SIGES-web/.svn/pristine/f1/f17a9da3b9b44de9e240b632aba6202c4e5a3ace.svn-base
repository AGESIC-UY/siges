package com.sofis.web.delegates;

import com.sofis.business.ejbs.RegistrosHorasBean;
import com.sofis.entities.data.RegistrosHoras;
import java.util.Date;
import java.util.List;
import javax.inject.Inject;

/**
 *
 * @author Usuario
 */
public class RegistrosHorasDelegate {

    @Inject
    private RegistrosHorasBean registrosHorasBean;

    public RegistrosHoras registrarHoras(RegistrosHoras registroHoras) {
        return registrosHorasBean.registrarHoras(registroHoras);
    }

    public List<RegistrosHoras> obtenerRegistrosHoras(Integer usuId, Integer proyPk, Integer entPk, Date fDesde, Date fHasta, Long desde, Long cant) {
        return registrosHorasBean.obtenerRegistrosHoras(usuId, proyPk, entPk, fDesde, fHasta, desde, cant);
    }

    public Double obtenerHorasTotalPorProy(Integer proyPk, Integer usuId) {
        return registrosHorasBean.obtenerHorasTotalPorProy(proyPk, usuId);
    }
    
    public Double obtenerHorasPendPorProy(Integer proyPk, Integer usuId) {
        return registrosHorasBean.obtenerHorasPendPorProy(proyPk, usuId);
    }
}
