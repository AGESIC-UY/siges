<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component"
                xmlns:fn="http://java.sun.com/jsp/jstl/functions">

    <c:set var="borderStyle" value="6px solid" />

    <ace:row condition="group" groupBy="#{acu.titulo}" pos="before" styleClass="tituloAcumulado">
        <ace:column colspan="14">
            <h:outputText value="#{acu.titulo}"/>
        </ace:column>
    </ace:row>

    <ace:column headerText="" >
        <div class="prodItem">
            <h:outputText value="#{acu.descPlan}" title="#{acu.titlePlan}"/>
            <h:outputText value="#{acu.descReal}" title="#{acu.titleReal}"/>
            <h:outputText value="#{acu.descProyectado}" title="#{acu.titleProyectado}" rendered="#{acu.tieneProyectado}"/>
        </div>
    </ace:column>

    <c:forEach begin="1" step="1" end="12" var="mes">
        <ace:column headerText="#{reporteProyectoMB.mesAbreviadoStr(mes)}" styleClass="colRight">
            <div class="prodItem">
                <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, mes).valorPlan}"
                              style="#{mesTieneEntClave} #{reporteProyectoMB.mesTieneEntClave(mes, 0) ? 'font-weight: bold;' : ''}"
                              converter="ImporteFormatConverter"/>

                <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, mes).valorReal}"
                              style="border-bottom: #{!acu.tieneProyectado ? borderStyle : ''} #{!acu.tieneProyectado ? reporteProyectoMB.getAcumuladoMesAnioColor(acu, mes) : ''}; #{reporteProyectoMB.mesTieneEntClave(mes, 1) ? 'font-weight: bold;' : ''}"
                              converter="ImporteFormatConverter"/>

                <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, mes).valorProyectadoTotal}"
                              style="border-bottom: #{borderStyle} #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, mes)}; #{reporteProyectoMB.mesTieneEntClave(mes, 2) ? 'font-weight: bold;' : ''}"
                              rendered="#{acu.tieneProyectado}"
                              converter="ImporteFormatConverter"/>
            </div>
        </ace:column>
    </c:forEach>

</ui:composition>