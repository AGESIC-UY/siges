<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:form id="frmFichaMapaUbicaPopup">
        <ice:panelPopup draggable="true" autoCentre="true" modal="true" rendered="#{fichaMB.renderPopupMapaUbicacion}">

            <f:facet name="header">
                <ice:panelGroup styleClass="cabezalPopup">
                    <ice:outputText value="#{labels.mapa_ubica_title}"/>
                    <ice:commandButton styleClass="botonCerrar" title="#{labels.cerrar}" 
                                       action="#{fichaMB.cerrarPopupMapaUbicacion()}"/>
                </ice:panelGroup>
            </f:facet>

            <f:facet name="body">
                <ice:panelGroup>
                    <div id="map-canvas" style="width:700px; height:500px"></div>
                    <ace:messages id="mapaUbicacionMsg"/>
                    
                    <ace:textEntry  style="display:none"  id="deptoAux" value="#{fichaMB.fichaTO.deptoAux}"/>
                    <ace:textEntry  style="display:none" id="proyLatAux" value="#{fichaMB.fichaTO.latlngLatAux}"/>
                    <ace:textEntry  style="display:none" id="proyLngAux" value="#{fichaMB.fichaTO.latlngLngAux}"/>
                  
                    <ice:commandButton value="#{labels.guardar}" partialSubmit="true"
                                action="#{fichaMB.guardarUbicacionProyecto()}"
                                styleClass="boton principal guardar"/>
                    <ace:linkButton value="#{labels.cerrar}" 
                                    action="#{fichaMB.cerrarPopupMapaUbicacion()}"/>
                </ice:panelGroup>
            </f:facet>

        </ice:panelPopup>
    </ice:form>
</ui:composition>