<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:form id="plantillaCroPopup">
        <ice:panelPopup draggable="false" 
                        autoCentre="true" 
                        modal="true" 
                        rendered="#{fichaMB.renderPopupPlantillaCro}">

            <f:facet name="header">
                <ice:panelGroup styleClass="cabezalPopup">
                    <ice:outputText value="#{labels.plaCrono_titulo}"/>
                    <ice:commandButton styleClass="botonCerrar" 
                                       title ="#{labels.cerrar}"
                                       action="#{fichaMB.cerrarPlantillaCroPopup()}"/>
                </ice:panelGroup>
            </f:facet>

            <f:facet name="body">
                <ice:panelGroup id="formPlantilla">
                    <ice:panelGrid styleClass="formulario" columns="2">
                        <ice:outputLabel value="#{labels.plaCrono_popup_nombre}:" />
                        <ice:selectOneMenu id="comboPlantilla"
                                           value="#{fichaMB.plantillaCroListCombo.selected}">
                            <f:selectItems value="#{fichaMB.plantillaCroListCombo.items}"/>
                        </ice:selectOneMenu>

                        <ice:outputLabel value="#{labels.plaCrono_popup_fecha}:"/>
                        <ace:dateTimeEntry value="#{fichaMB.plantillaFechaInicio}"
                                           pattern="#{inicioMB.calendarPattern}" 
                                           renderAsPopup="true" 
                                           timeZone="#{inicioMB.calendarTimeZone}"/>
                    </ice:panelGrid>

                    <ice:panelGroup styleClass="panelBotones">
                        <ace:messages id="plantCroPopupMsg"/>
                        <ace:pushButton value="#{labels.guardar}" 
                                        action="#{fichaMB.generarCroDesdePlantilla()}" 
                                        styleClass="boton principal guardar"/>
                        <ace:linkButton value="#{labels.cerrar}" 
                                        action="#{fichaMB.cerrarPlantillaCroPopup()}"/>
                    </ice:panelGroup>
                </ice:panelGroup>
            </f:facet>
        </ice:panelPopup>
    </ice:form>
</ui:composition>