<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:panelGroup id="buscador" styleClass="buscador recuadro filtroProyecto"
                    rendered="#{inicioMB.organismo != null}">
        <ace:pushButton styleClass="#{publicacionWebMB.filtroRender ? 'botonDesplegable comprimir' : 'botonDesplegable'}" 
                        action="#{publicacionWebMB.renderizarFiltro()}"/>

        <ice:outputText value="#{labels.busqueda_inicio}" styleClass="subtitulo"/>

        <ice:panelGroup rendered="#{publicacionWebMB.countFiltroThread eq 0 and !(publicacionWebMB.filtroInicioResultado ne null and publicacionWebMB.filtroInicioResultado.size() gt 0)}"
                        styleClass="mensajeBusqueda">
            <ice:graphicImage value="../img/mens-info-busqueda.png" />
            <ice:outputText value=" #{labels.info_sin_resultados_busqueda}" />
        </ice:panelGroup>

        <!-- Filtro Ficha -->
        <ice:panelGroup styleClass="col-sm-12">
            <ice:panelGrid  styleClass="formulario " columns="6" rendered="#{publicacionWebMB.filtroRender}">
                <ice:outputLabel value="#{labels.anioDesdeHasta}:"/>
                <ice:panelGroup>
                    <ace:textEntry value="#{publicacionWebMB.filtro.anioDesde}" 
                                   styleClass="textoCorto"
                                   converter="IntegerFormatConverter"
                                   style="margin-right: 20px;"/>
                    <ace:textEntry value="#{publicacionWebMB.filtro.anioHasta}" 
                                   styleClass="textoCorto"
                                   converter="IntegerFormatConverter"/>
                </ice:panelGroup>
                
                <ice:outputLabel value="#{labels.nombre_filtro}:"/>
                <ace:textEntry value="#{publicacionWebMB.filtro.nombre}" />

                <ice:outputLabel value="#{labels.inicio_col_Area}:"/>
                <ice:selectOneMenu value="#{publicacionWebMB.listaAreasOrganismoCombo.selected}" 
                                   styleClass="textoMedio">
                    <f:selectItems value="#{publicacionWebMB.listaAreasOrganismoCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.gerenteAdjuntoFicha}:"/>
                <ice:selectOneMenu id="comboGerente" 
                                   value="#{publicacionWebMB.listaGerenteCombo.selected}" 
                                   styleClass="textoMedio">
                    <f:selectItems value="#{publicacionWebMB.listaGerenteCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.sponsorFicha}:" />
                <ice:selectOneMenu id="comboSponsor" 
                                   value="#{publicacionWebMB.listaSponsorCombo.selected}" >
                    <f:selectItems value="#{publicacionWebMB.listaSponsorCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.pmoFederadaFicha}:"/>
                <ice:selectOneMenu id="comboPMOFed" 
                                   value="#{publicacionWebMB.listaPmoFederadaCombo.selected}"
                                   styleClass="textoMedio">
                    <f:selectItems value="#{publicacionWebMB.listaPmoFederadaCombo.items}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.filtro_fase}:"/>
                <ice:selectManyCheckbox value="#{publicacionWebMB.filtro.estados}">
                    <f:selectItems value="#{publicacionWebMB.listaEstadosItem}"/>
                </ice:selectManyCheckbox>

                <ice:outputLabel value="#{labels.areaTematicaFicha}:"/>
                <ace:pushButton styleClass="botonEditar #{publicacionWebMB.fieldDisabled('AreaTematica') ? 'iconoDisabledTabla' : 'iconoTabla'} #{publicacionWebMB.areasTematicasHasValues() ? 'valores' : ''}" 
                                action="#{publicacionWebMB.areaTematicaPopup(true)}"/>
            </ice:panelGrid>
        </ice:panelGroup>

        <ice:panelGroup styleClass="panelAcciones" rendered="#{publicacionWebMB.filtroRender}">
            <ice:panelGroup styleClass="panelBotones" >
                <ace:messages id="filtroBusquedaMsg" />
                <ace:pushButton value="#{labels.buscar}" 
                                styleClass="boton principal buscar" 
                                action="#{publicacionWebMB.buscarAction()}"/>
                <ace:linkButton value="#{labels.limpiar}" 
                                styleClass="boton secundario" style="margin-left: 10px;"
                                action="#{publicacionWebMB.limpiarFiltro()}"/>
            </ice:panelGroup>
        </ice:panelGroup>
    </ice:panelGroup>
</ui:composition>