     public static String toString(Object o){
         String s = o != null ? String.valueOf(o) : "";
         return toString(s);
     }
     
     public static String toString(String s){
         return s != null ? s : "";
     }
     
     public static String toCleanString(String s){
         if (s == null){
             return "";
         }
         s = s.replaceAll("\n", " ");
         s = s.replaceAll("\t", " ");
         s = s.replaceAll("\r", " ");
         return s;
     }
     
