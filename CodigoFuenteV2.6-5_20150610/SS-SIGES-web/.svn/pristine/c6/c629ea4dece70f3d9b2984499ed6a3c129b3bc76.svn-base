<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:form id="frmCambioPass" action="#{cambioContraseniaMB.guardar()}">
        <ice:panelGroup id="tituloPaginaCargo" styleClass="tituloPagina">
            <ice:outputLabel value="#{labels.tituloCambioContrasenia}"/>
        </ice:panelGroup>

        <ice:panelGroup id="buscador" styleClass="buscador recuadro">

            <ice:panelGrid  styleClass="formulario " columns="2">
                <ice:outputLabel value="#{labels.contraseniaActual}"/>
                <ice:inputSecret value="#{cambioContraseniaMB.contraseniaActual}" />

                <ice:outputLabel value="#{labels.nuevaContrasenia}"/>
                <ice:inputSecret  value="#{cambioContraseniaMB.nuevaContrasenia}"/>

                <ice:outputLabel value="#{labels.confirmacionContrasenia}"/>
                <ice:inputSecret value="#{cambioContraseniaMB.confirmacionContrasenia}" />

                <ice:panelGrid />
                <ice:panelGroup  styleClass="panelBotones"  >
                    <ace:messages />
                    <ace:pushButton value="#{labels.confirmar}" id="guardarCambioPass"
                                    styleClass="boton principal guardar" 
                                    action="#{cambioContraseniaMB.guardar()}"/>
                    <ace:linkButton value="#{labels.cancelar}" 
                                    styleClass="boton secundario" 
                                    action="#{cambioContraseniaMB.cancelar}"/>
                </ice:panelGroup>
            </ice:panelGrid>
        </ice:panelGroup>



    </ice:form>




</ui:composition>