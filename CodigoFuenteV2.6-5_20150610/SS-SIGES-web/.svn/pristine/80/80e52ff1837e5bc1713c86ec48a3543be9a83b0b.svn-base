<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:form id="frmFichaPubWebPopup">
        <ice:panelPopup draggable="true" 
                        autoCentre="true" 
                        modal="true" 
                        styleClass="popupGrande"
                        rendered="#{fichaMB.renderPopupPubWeb.isRenderPopup()}">

            <f:facet name="header">
                <ice:panelGroup styleClass="cabezalPopup">
                    <ice:outputText value="#{labels.pubweb_titulo}"/>
                    <ice:commandButton styleClass="botonCerrar" title ="#{labels.cerrar}" 
                                       action="#{fichaMB.cancelarPubWeb()}"/>
                </ice:panelGroup>
            </f:facet>

            <f:facet name="body">
                <ice:panelGroup style="height: 440px">
                    <ace:tabSet rendered="true">
                        <ace:tabPane label="#{labels.pubweb_que_es_tab}">
                            <ice:panelGroup styleClass="popupScroll">
                                <ice:panelGroup  styleClass="formulario ">
                                    <ice:panelGroup  styleClass="col-sm-12">
                                        <ice:outputLabel value="#{labels.pubweb_descripcion}" styleClass="subtitulo"/>
                                        <ace:richTextEntry id="descPubWeb"
                                                           value="#{fichaMB.fichaTO.descripcion}" 
                                                           disabled="#{fichaMB.fieldDisabled('pubweb_descripcion')}"
                                                           rendered="#{fichaMB.fieldRendered('pubweb_descripcion')}"
                                                           toolbar="Basic" immediate="true" language="es"
                                                           skin="kama" saveOnSubmit="true"
                                                           styleClass="ancho100" height="80px" />

                                        <ice:panelGroup styleClass="recuadro"
                                                        rendered="#{!fichaMB.fieldRendered('pubweb_descripcion')}">
                                            <ice:outputText rendered="#{!fichaMB.fieldRendered('pubweb_descripcion')}"
                                                            value="#{fichaMB.fichaTO.descripcion}"
                                                            escape="false"/>
                                        </ice:panelGroup>
                                    </ice:panelGroup>

                                    <ice:panelGroup  styleClass="col-sm-12">
                                        <ice:outputLabel value="#{labels.pubweb_objetivo}" styleClass="subtitulo"/>
                                        <ace:richTextEntry id="objetivoPubWeb"
                                                           value="#{fichaMB.fichaTO.objetivo}" 
                                                           disabled="#{fichaMB.fieldDisabled('Objetivo')}"
                                                           rendered="#{fichaMB.fieldRendered('Objetivo')}"
                                                           toolbar="Basic" immediate="true" language="es"
                                                           skin="kama" saveOnSubmit="true"
                                                           styleClass="ancho100" height="80px" />
                                        
                                        <ice:panelGroup styleClass="recuadro"
                                                        rendered="#{!fichaMB.fieldRendered('Objetivo')}">
                                            <ice:outputText value="#{fichaMB.fichaTO.objetivo}"
                                                            escape="false"/>
                                        </ice:panelGroup>
                                    </ice:panelGroup>

                                    <ice:panelGroup  styleClass="col-sm-12">
                                        <ice:outputLabel value="#{labels.pubweb_alcance}" styleClass="subtitulo"/>
                                        <ace:richTextEntry id="alcancePubWeb"
                                                           value="#{fichaMB.fichaTO.alcance}" 
                                                           disabled="#{fichaMB.fieldDisabled('pubweb_alcance')}"
                                                           rendered="#{fichaMB.fieldRendered('pubweb_alcance')}"
                                                           toolbar="Basic" immediate="true" language="es"
                                                           skin="kama" saveOnSubmit="true"
                                                           styleClass="ancho100" height="80px" />
                                        
                                        <ice:panelGroup styleClass="recuadro"
                                                        rendered="#{!fichaMB.fieldRendered('pubweb_alcance')}">
                                            <ice:outputText value="#{fichaMB.fichaTO.alcance}"
                                                            escape="false"/>
                                        </ice:panelGroup>
                                    </ice:panelGroup>

                                    <ice:panelGroup  styleClass="col-sm-12">
                                        <ice:outputLabel value="#{labels.pubweb_pub_objetivo}" styleClass="subtitulo"/>
                                        <ace:richTextEntry id="pubObjPubWeb"
                                                           value="#{fichaMB.fichaTO.objPublico}" 
                                                           disabled="#{fichaMB.fieldDisabled('PubObjetivo')}"
                                                           rendered="#{fichaMB.fieldRendered('PubObjetivo')}"
                                                           toolbar="Basic" immediate="true" language="es"
                                                           skin="kama" saveOnSubmit="true"
                                                           styleClass="ancho100" height="80px" />
                                        
                                        <ice:panelGroup styleClass="recuadro"
                                                        rendered="#{!fichaMB.fieldRendered('PubObjetivo')}">
                                            <ice:outputText value="#{fichaMB.fichaTO.objPublico}"
                                                            escape="false"/>
                                        </ice:panelGroup>
                                    </ice:panelGroup>
                                </ice:panelGroup> 
                            </ice:panelGroup> 
                        </ace:tabPane>

                        <ace:tabPane label="#{labels.pubweb_beneficios_tab}">
                            <ice:panelGroup styleClass="popupScroll">
                                <ice:panelGroup styleClass="formulario " >
                                    <ice:panelGroup  styleClass="col-sm-12">
                                        <ice:outputLabel value="#{labels.pubweb_beneficios}" styleClass="subtitulo"/>
                                        <ace:richTextEntry id="beneficiosPubWeb"
                                                           value="#{fichaMB.fichaTO.beneficios}" 
                                                           disabled="#{fichaMB.fieldDisabled('pubweb_beneficios')}"
                                                           rendered="#{fichaMB.fieldRendered('pubweb_beneficios')}"
                                                           toolbar="Basic" immediate="true" language="es"
                                                           skin="kama" saveOnSubmit="true"
                                                           styleClass="ancho100" height="80px" />
                                        
                                        <ice:panelGroup styleClass="recuadro"
                                                        rendered="#{!fichaMB.fieldRendered('pubweb_beneficios')}">
                                            <ice:outputText value="#{fichaMB.fichaTO.beneficios}"
                                                            escape="false"/>
                                        </ice:panelGroup>
                                    </ice:panelGroup>
                                </ice:panelGroup>
                            </ice:panelGroup> 
                        </ace:tabPane>

                        <ace:tabPane label="#{labels.pubweb_implementacion_tab}">
                            <ice:panelGroup styleClass="popupScroll">
                                <ice:panelGroup  styleClass="formulario " >
                                    <ice:panelGroup  styleClass="col-sm-12">
                                        <ice:outputLabel value="#{labels.pubweb_integrantes}" styleClass="subtitulo"/>
                                        <ace:richTextEntry id="integrantesPubWeb"
                                                           value="#{fichaMB.fichaTO.quienesIntegran}" 
                                                           disabled="#{fichaMB.fieldDisabled('pubweb_integrantes')}"
                                                           rendered="#{fichaMB.fieldRendered('pubweb_integrantes')}"
                                                           toolbar="Basic" immediate="true" language="es"
                                                           skin="kama" saveOnSubmit="true"
                                                           styleClass="ancho100" height="80px" />
                                        
                                        <ice:panelGroup styleClass="recuadro"
                                                        rendered="#{!fichaMB.fieldRendered('pubweb_integrantes')}">
                                            <ice:outputText value="#{fichaMB.fichaTO.quienesIntegran}"
                                                            escape="false"/>
                                        </ice:panelGroup>
                                    </ice:panelGroup>

                                    <ice:panelGroup  styleClass="col-sm-12">
                                        <ice:outputLabel value="#{labels.pubweb_rol_de} #{inicioMB.organismo.orgNombre}" styleClass="subtitulo"/>
                                        <ace:richTextEntry id="rolOrgPubWeb"
                                                           value="#{fichaMB.fichaTO.rolOrganismo}" 
                                                           disabled="#{fichaMB.fieldDisabled('pubweb_rol_organismo')}"
                                                           rendered="#{fichaMB.fieldRendered('pubweb_rol_organismo')}"
                                                           toolbar="Basic" immediate="true" language="es"
                                                           skin="kama" saveOnSubmit="true"
                                                           styleClass="ancho100" height="80px" />
                                        
                                        <ice:panelGroup styleClass="recuadro"
                                                        rendered="#{!fichaMB.fieldRendered('pubweb_rol_organismo')}">
                                            <ice:outputText value="#{fichaMB.fichaTO.rolOrganismo}"
                                                            escape="false"/>
                                        </ice:panelGroup>
                                    </ice:panelGroup>

                                    <ice:panelGroup  styleClass="col-sm-12">
                                        <ice:outputLabel value="#{labels.pubweb_sit_actual}" styleClass="subtitulo"/>
                                        <ace:richTextEntry id="sitActPubWeb"
                                                           value="#{fichaMB.fichaTO.situacionActual}" 
                                                           disabled="#{fichaMB.fieldDisabled('SitActual')}"
                                                           rendered="#{fichaMB.fieldRendered('SitActual')}"
                                                           toolbar="Basic" immediate="true" language="es"
                                                           skin="kama" saveOnSubmit="true"
                                                           styleClass="ancho100" height="80px" />
                                        
                                        <ice:panelGroup styleClass="recuadro"
                                                        rendered="#{!fichaMB.fieldRendered('SitActual')}">
                                            <ice:outputText value="#{fichaMB.fichaTO.situacionActual}"
                                                            escape="false"/>
                                        </ice:panelGroup>
                                    </ice:panelGroup>
                                </ice:panelGroup>
                            </ice:panelGroup> 
                        </ace:tabPane>
                    </ace:tabSet>

                    <ice:panelGroup styleClass="panelBotones margen-sup">
                        <ace:pushButton rendered="#{fichaMB.fieldRendered('GuardarFicha')}"
                                        disabled="#{fichaMB.fieldDisabled('GuardarFicha')}"
                                        value="#{labels.guardar}"
                                        action="#{fichaMB.guardarFichaAction()}"
                                        styleClass="boton principal guardar"/>

                        <ace:linkButton value="#{labels.salir}"
                                        action="#{fichaMB.cancelarPubWeb()}"/>
                    </ice:panelGroup>

                </ice:panelGroup>
            </f:facet>
        </ice:panelPopup>
    </ice:form>
</ui:composition>