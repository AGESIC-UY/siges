<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:form id="frmFichaAreaTematicaPopup">
        <ice:panelPopup draggable="true" autoCentre="true" modal="true" rendered="#{inicioMB.renderPopupAreaTematica}">

            <f:facet name="header">
                <ice:panelGroup styleClass="cabezalPopup">
                    <ice:outputText value="#{labels.hAreaTematicaPopup}"/>
                    <ice:commandButton styleClass="botonCerrar" title ="#{labels.cerrar}" 
                                       action="#{inicioMB.cerrarPopupAreaTematica()}"/>
                </ice:panelGroup>
            </f:facet>
            <f:facet name="body">
                <ice:panelGroup styleClass="row pickList" >
                    <ice:panelGroup styleClass="col-sm-6"
                                    rendered="#{inicioMB.fieldRendered('AreaTematicaTree') and fichaMB.areasTematicasStateMapHasValues()}">
                        <ace:tree id="treeAreasTematicas"
                                  expansion="true"
                                  selection="true"
                                  selectMultiple="true"
                                  reordering="false"
                                  value="#{inicioMB.listaAreasTagsTreeNode}"
                                  var="node" 
                                  stateMap="#{inicioMB.areasTematicasStateMap}"
                                  stateVar="nState">
                            <ace:ajax event="select" render="@all" execute="@all" />
                            <ace:ajax event="deselect" render="@all" execute="@all" />
                            <ace:node>
                                <h:outputText value="#{node.userObject.areatagNombre}" />
                            </ace:node>
                        </ace:tree>
                    </ice:panelGroup>
                    <!-- ice:panelGroup styleClass="col-sm-6"
                                    rendered=" # {inicioMB.fieldRendered('AreaTematicaTree') and !inicioMB.areasTematicasHasValues()}">
                        <ice:outputText value=" # {labels.areasTematicasVacio}"/>
                        <ul class="output ui-corner-all ui-widget-content" style=""></ul>
                    </ice:panelGroup -->

                    <ice:panelGroup styleClass="col-sm-6">
                        <ice:outputText value="#{labels.areasTematicasSeleccionadas}"/>
                        <ul class="output ui-corner-all ui-widget-content" style="">
                            <ui:repeat var="selection" value="#{inicioMB.areasTematicasSelected}">
                                <li><h:outputText value="#{selection.userObject.areatagNombre}" /></li>
                            </ui:repeat>
                        </ul>
                    </ice:panelGroup>
                </ice:panelGroup>
            </f:facet>
        </ice:panelPopup>
    </ice:form>
</ui:composition>