<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:form id="frmTipoGasto">
        <ice:panelGroup id="tituloPaginaTipoGasto" styleClass="tituloPagina">
            <ice:outputLabel value="#{labels.tituloTipoGasto}"/>
        </ice:panelGroup>

        <ice:panelGroup styleClass="btnAgregarABM">
            <ace:pushButton value="#{labels.agregarTipoGasto}" 
                            styleClass="boton principal agregar"
                            action="#{tipoGastoMB.agregar()}" />
        </ice:panelGroup>

        <ice:panelGroup id="espacioTrabajo" styleClass="buscador recuadro margen-inf">
            <ice:outputText value="#{labels.busqueda}" styleClass="subtitulo"/> 

            <ice:panelGrid styleClass="formulario" columns="6">
                <ice:outputLabel value="#{labels.tipo_gasto_head_nombre}"/>
                <ace:textEntry value="#{tipoGastoMB.filtroNombre}" />
            </ice:panelGrid>

            <ice:panelGroup styleClass="panelAcciones" >
                <ice:panelGroup styleClass="panelBotones" >
                    <ace:messages id="busquedaMsg" />
                    <ace:pushButton value="#{labels.buscar}" 
                                    styleClass="boton principal buscar" 
                                    action="#{tipoGastoMB.buscar()}"/>

                    <ace:linkButton value="#{labels.limpiar}" 
                                    styleClass="boton secundario" 
                                    action="#{tipoGastoMB.limpiar()}"/>
                </ice:panelGroup>
            </ice:panelGroup>
        </ice:panelGroup>

        <ice:panelGroup id="resultado" styleClass="resultado recuadro margen-sup" >
            <ice:outputText value="#{labels.resultadoBusqueda}: #{tipoGastoMB.listaResultado.size()} #{labels.elementosResultado}." 
                            styleClass="resultadoBusqueda"/>
            <ice:panelGroup rendered="#{not empty tipoGastoMB.listaResultado}"
                            styleClass="resultadoCompleto">
                <ice:panelGroup  styleClass="funcionalidadesResultado"  >
                    <ice:outputLabel value="#{labels.elementosPorPagina}"/>
                    <ace:simpleSelectOneMenu value="#{tipoGastoMB.cantElementosPorPagina}" 
                                             styleClass="textoCorto"
                                             valueChangeListener="#{tipoGastoMB.cambiarCantPaginas}">
                        <f:selectItem itemLabel="25" itemValue="25"/>
                        <f:selectItem itemLabel="50" itemValue="50"/>
                        <f:selectItem itemLabel="100" itemValue="100"/>
                        <ace:ajax />
                    </ace:simpleSelectOneMenu>

                    <ice:outputLabel value="#{labels.ordenar_por}:"/>
                    <ace:simpleSelectOneMenu value="#{tipoGastoMB.elementoOrdenacion}" styleClass="textoMedio"
                                             valueChangeListener="#{tipoGastoMB.cambiarCriterioOrdenacion}">
                        <f:selectItem itemLabel="#{labels.area_tem_busqueda_nombre}" itemValue="tipogasNombre"/>
                        <ace:ajax />
                    </ace:simpleSelectOneMenu>
                    <ace:simpleSelectOneMenu value="#{tipoGastoMB.ascendente}" styleClass="textoMedio"
                                             valueChangeListener="#{tipoGastoMB.cambiarAscendenteOrdenacion}">
                        <f:selectItem itemLabel="#{labels.ascendente}" itemValue="1"/>
                        <f:selectItem itemLabel="#{labels.descendente}" itemValue="0"/>
                        <ace:ajax />
                    </ace:simpleSelectOneMenu>

                    <ace:dataExporter target="tblResultados" label="#{labels.exportarPlanilla}" 
                                      type="xls" fileName="#{labels.exportarPlantillaTipoGasto}"
                                      includeHeaders="true" excludeColumns="3,4" />
                </ice:panelGroup>

                <ice:panelGroup rendered="#{tipoGastoMB.listaResultado != null and not empty tipoGastoMB.listaResultado}" 
                                styleClass="cuerpo">
                    <ace:dataTable id="tblResultados" 
                                   value="#{tipoGastoMB.listaResultado}" 
                                   var="tg" 
                                   styleClass="tablaResultados table-responsive"
                                   paginator="true" pageCount="5" 
                                   rows="#{tipoGastoMB.cantElementosPorPagina}">
                        <ace:column headerText="#{labels.tipo_gasto_head_pk}" >
                            <h:outputText value="#{tg.tipogasPk}"/>
                        </ace:column>

                        <ace:column headerText="#{labels.tipo_gasto_head_nombre}">
                            <h:outputText value="#{tg.tipogasNombre}"/>
                        </ace:column>
                        
                        <ace:column headerText="#{labels.hEditar}" styleClass="columnaBoton">
                            <ice:panelGroup title="#{labels.editar}">
                                <ace:pushButton styleClass="botonEditar iconoTabla" 
                                                action="#{tipoGastoMB.editar(tg.tipogasPk)}" />
                            </ice:panelGroup>
                        </ace:column>
                        <ace:column headerText="" styleClass="columnaBoton">
                            <ice:panelGroup title="#{labels.elilminar_tipo_gasto}">
                                <h:commandButton onclick="confirmationEliminar#{tg.tipogasPk}.show()"
                                                 styleClass="botonEliminar iconoTabla" 
                                                 type="button"/>

                                <ace:confirmationDialog id="confirmDialogEliminar"
                                                        widgetVar="confirmationEliminar#{tg.tipogasPk}"
                                                        message="#{labels.confirmacionEliminacion}"
                                                        header="#{labels.hConfirmacion}"
                                                        closable="true"
                                                        closeOnEscape="true"
                                                        severity="info"
                                                        modal="true"
                                                        position="center">
                                    <h:panelGrid columns="2" styleClass="centeredPanelGrid">
                                        <h:commandButton value="#{labels.si}"
                                                         styleClass="boton principal botonContinuar"
                                                         onclick="confirmationEliminar#{tg.tipogasPk}.hide()" 
                                                         actionListener="#{tipoGastoMB.eliminar(tg.tipogasPk)}"/>
                                        <h:commandButton value="#{labels.no}"
                                                         styleClass="boton principal botonEliminar"
                                                         onclick="confirmationEliminar#{tg.tipogasPk}.hide()"  />
                                    </h:panelGrid>
                                </ace:confirmationDialog> 
                            </ice:panelGroup>
                        </ace:column>

                    </ace:dataTable>
                </ice:panelGroup>
            </ice:panelGroup>

            <ice:panelGroup styleClass="noResultados" rendered="#{empty tipoGastoMB.listaResultado}">
                <ice:outputText value="#{labels.noHayResultados}"/>
            </ice:panelGroup>

        </ice:panelGroup>
    </ice:form>
</ui:composition>