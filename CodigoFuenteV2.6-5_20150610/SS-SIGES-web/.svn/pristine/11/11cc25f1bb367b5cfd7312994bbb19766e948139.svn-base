<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

  <ice:form id="frmPersonasPopup">

    <ice:panelPopup rendered="#{personasMB.renderPopupEditar}" 
                    draggable="true" 
                    autoCentre="true" 
                    modal="true"
                    style="width: 900px;">
      <f:facet name="header">
        <ice:panelGroup styleClass="cabezalPopup">
          <ice:outputText value="#{labels.editar_persona}"/>
          <ice:commandButton styleClass="botonCerrar" action="#{personasMB.cancelar}"/>
        </ice:panelGroup>
      </f:facet>

      <f:facet name="body">
        <ice:panelGroup id="formPersona">
          <ice:panelGrid styleClass="formulario" columns="4">
            <ice:outputLabel value="#{labels.persona_editar_nombre}:" styleClass="obligatorio"/>
            <ace:textEntry value="#{personasMB.personaEditar.persNombre}" />
            
            <ice:outputLabel value="#{labels.persona_editar_cargo}:" />
            <ace:textEntry value="#{personasMB.personaEditar.persCargo}" />

            <ice:outputLabel value="#{labels.persona_editar_telefono}:" styleClass="obligatorio"/>
            <ace:textEntry value="#{personasMB.personaEditar.persTelefono}" />

            <ice:outputLabel value="#{labels.persona_editar_email}:" styleClass="obligatorio"/>
            <ace:textEntry value="#{personasMB.personaEditar.persMail}" />

          </ice:panelGrid>

          <ice:panelGroup styleClass="panelBotones">
            <ace:messages id="usuarioPopupMsg"/>
            <ace:pushButton value="#{labels.guardar}" action="#{personasMB.guardar}" styleClass="boton principal guardar"/>
            <ace:linkButton value="#{labels.cancelar}" action="#{personasMB.cancelar}" styleClass="boton secundario" />
          </ice:panelGroup>
        </ice:panelGroup>
      </f:facet>
    </ice:panelPopup>
  </ice:form>
</ui:composition>
