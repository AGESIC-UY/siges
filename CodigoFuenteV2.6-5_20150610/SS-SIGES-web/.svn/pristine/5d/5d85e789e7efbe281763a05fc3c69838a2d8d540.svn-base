            <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 1).valorReal}"
                          style="border-bottom: #{borderStyle} #{reporteProyectoMB.getAcumuladoMesAnioColor(acu, 1)}"
                          converter="ImporteFormatConverter"/>

            <h:outputText value="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 1).valorProyectado}"
                          style="#{reporteProyectoMB.getAcumuladoMesAnio(acu, 1).proyectadoNegativo ? styleProyectado : ''}"
