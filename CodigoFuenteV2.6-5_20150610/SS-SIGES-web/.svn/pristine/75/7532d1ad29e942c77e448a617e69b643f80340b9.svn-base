<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:panelGroup id="presupuestoAdqForm" rendered="#{fichaMB.formPreRendered == 2}">
        <ice:outputText value="#{labels.adquisicion_titulo}" styleClass="subtitulo"/>
        <ice:panelGrid styleClass="formulario" columns="4">
            <ice:outputLabel value="#{labels.adquisicion_nombre}"/>
            <ace:textEntry value="#{fichaMB.adquisicion.adqNombre}"
                           disabled="#{fichaMB.fieldDisabled('preAdqNombre')}"/>

            <ice:outputLabel value="#{labels.adquisicion_proveedor}"/>
            <ace:simpleSelectOneMenu id="comboProveedorAdq"
                                     value="#{fichaMB.listaOrganizacionCombo.selected}">
                <f:selectItems value="#{fichaMB.listaOrganizacionCombo.items}"/>
            </ace:simpleSelectOneMenu>

            <ice:outputLabel value="#{labels.adquisicion_fuente}"/>
            <ace:simpleSelectOneMenu id="comboFuenteAdq"
                                     value="#{fichaMB.listaFuentesCombo.selected}">
                <f:selectItems value="#{fichaMB.listaFuentesCombo.items}"/>
            </ace:simpleSelectOneMenu>

            <ice:outputLabel value="#{labels.moneda}"/>
            <ace:simpleSelectOneMenu id="comboMonedaAdq"
                                     value="#{fichaMB.listaMonedaCombo.selected}">
                <f:selectItems value="#{fichaMB.listaMonedaCombo.items}"/>
            </ace:simpleSelectOneMenu>
            
            <ice:outputLabel value="#{labels.adquisicion_proc_compra}"/>
            <ace:textEntry value="#{fichaMB.adquisicion.adqProcCompra}"
                           disabled="#{fichaMB.fieldDisabled('preAdqProcCompra')}"/>
            
            <ice:outputLabel value="#{labels.adquisicion_proc_compra_grp}"/>
            <ace:textEntry value="#{fichaMB.adquisicion.adqProcCompraGrp}"
                           disabled="#{fichaMB.fieldDisabled('preAdqProcCompraGRP')}"/>
        </ice:panelGrid>

        <ice:panelGroup styleClass="panelBotones">
            <ace:messages id="formAdqMsg"/>
            <ace:pushButton  value="#{fichaMB.adquisicion ne null and fichaMB.adquisicion.adqPk ne null ? labels.editarAdquisicion : labels.agregarAdquisicion}" 
                             styleClass="boton principal #{fichaMB.adquisicion ne null and fichaMB.adquisicion.adqPk ne null ? 'editar' : 'agregar'}" 
                             action="#{fichaMB.agregarAdquisicionAction()}" />
            <ace:linkButton   value="#{labels.limpiar}" styleClass="boton secundario" 
                              action="#{fichaMB.limpiarAdquisicion()}"/>
            <ace:linkButton  value="#{labels.cerrar}" styleClass="boton secundario" 
                             action="#{fichaMB.cerrarFormPreCollapsable()}"/>
        </ice:panelGroup>
    </ice:panelGroup>

</ui:composition>