<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ace="http://www.icefaces.org/icefaces/components"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:icecore="http://www.icefaces.org/icefaces/core"
                xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:panelGroup id="buscador"
                    styleClass="buscador recuadro filtroProyecto margen-inf"
                    rendered="#{inicioMB.organismo != null}">

        <ice:outputText value="#{labels.busqueda}" styleClass="subtitulo"/>

        <ice:panelGroup styleClass="col-sm-12">
            <ice:panelGrid styleClass="formulario" columns="4">
                <ice:outputLabel value="#{labels.registroHoras_proyecto}:" />
                <ice:selectOneMenu id="comboProyectoFiltro" 
                                   value="#{registroHorasMB.filtroProyPk}" 
                                   valueChangeListener="#{registroHorasMB.cambiarProyectoFiltro}" 
                                   partialSubmit="true">
                    <f:selectItems value="#{registroHorasMB.listaProyectosFiltro}" var="proy1" 
                                   itemLabel="#{proy1.proyNombre}" itemValue="#{proy1.proyPk}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.registroHoras_entregable}:" />
                <ice:selectOneMenu id="comboEntregableFiltro" value="#{registroHorasMB.filtroEntPk}">
                    <f:selectItems value="#{registroHorasMB.listaEntregablesFiltro}" var="ent1" 
                                   itemLabel="#{ent1.entNombre}" itemValue="#{ent1.entPk}"/>
                </ice:selectOneMenu>

                <ice:outputLabel value="#{labels.registroHoras_fecha}:" />
                <ace:dateTimeEntry value="#{registroHorasMB.filtroFechaDesde}"
                                   pattern="#{inicioMB.calendarPattern}" renderAsPopup="true" 
                                   timeZone="#{inicioMB.calendarTimeZone}" styleClass="hasDatepicker"/>

                <ice:outputLabel value="#{labels.registroHoras_horas}:" />
                <ace:dateTimeEntry value="#{registroHorasMB.filtroFechaHasta}"
                                   pattern="#{inicioMB.calendarPattern}" renderAsPopup="true" 
                                   timeZone="#{inicioMB.calendarTimeZone}" styleClass="hasDatepicker"/>
            </ice:panelGrid>
        </ice:panelGroup>

        <ice:panelGroup styleClass="panelAcciones" >
            <ice:commandButton value="#{labels.registroHoras_buscarConFiltro}" 
                               action="#{registroHorasMB.buscarConFiltro()}" 
                               styleClass="boton principal buscar"/>
            <ice:commandButton value="#{labels.registroHoras_buscarSinFiltro}" 
                               action="#{registroHorasMB.buscarSinFiltro()}" 
                               styleClass="boton principal buscar"/>
        </ice:panelGroup>

    </ice:panelGroup>
</ui:composition>